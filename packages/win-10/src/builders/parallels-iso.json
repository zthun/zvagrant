{
  "variables": {
    "iso": null,
    "name": null,
    "version": null,
    "os": "win-10",
    "tag": "{{user `os`}}-{{ user `name`}}",
    "title": "{{user `tag`}}-{{user `version`}}"
  },
  "builders": [
    {
      "type": "parallels-iso",
      "output_directory": "output",
      "guest_os_type": "{{user `os`}}",
      "vm_name": "{{user `tag`}}",
      "cpus": 2,
      "memory": 4096,
      "disk_size": 500000,
      "parallels_tools_flavor": "win",
      "parallels_tools_mode": "attach",
      "iso_url": "{{ user `iso` }}",
      "iso_checksum_type": "none",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "packages/win-10/src/answer/Autounattend.xml",
        "packages/win-10/src/scripts/install-winrm.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "packages/win-10/src/scripts/install-parallels-tools-additions.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "powershell",
      "script": "packages/win-10/src/scripts/install-chocolatey-packages.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "powershell",
      "script": "packages/win-10/src/scripts/install-windows-features.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false,
        "vagrantfile_template": "packages/win-10/src/templates/vagrantfile",
        "output": "dist/{{user `title`}}-{{.Provider}}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "zthun/{{user `tag`}}",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
