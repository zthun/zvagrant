{
  "variables": {
    "iso": null,
    "name": null,
    "version": null
  },
  "builders": [
    {
      "type": "parallels-iso",
      "output_directory": "output/windows-10/parallels-iso/{{ user `name`}}",
      "guest_os_type": "win-10",
      "vm_name": "win-10-parallels",
      "cpus": 2,
      "memory": 4096,
      "disk_size": 500000,
      "parallels_tools_flavor": "win",
      "parallels_tools_mode": "attach",
      "iso_url": "{{ user `iso` }}",
      "iso_checksum_type": "none",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "packages/windows-10/src/answer/Autounattend.xml",
        "packages/windows-10/src/scripts/install-winrm.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "packages/windows-10/src/scripts/install-parallels-tools-additions.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "powershell",
      "script": "packages/windows-10/src/scripts/install-chocolatey-packages.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "powershell",
      "script": "packages/windows-10/src/scripts/install-windows-features.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "dist/windows-10/parallels-iso/windows-10-{{ user `name` }}-{{ user `version`}}.box"
    }
  ]
}
